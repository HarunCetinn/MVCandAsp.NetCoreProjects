@using OgrenciNotMvcProject.Models.EntityFramework
@model List<TblDersler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ders Id</th>
        <th>Ders Adı</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach(var drs in Model)
        {
            <tr>
                <td>@drs.DersId</td>
                <td>@drs.DersAd</td>
                <td><a href="/Default/Sil/@drs.DersId" class="btn btn-danger"> Sil </a> <a href="/Default/DersGetir/@drs.DersId" class="btn btn-warning"> Güncelle </a></td>
            </tr>
        }
    </tbody>

</table>
<a href="/Default/YeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>

