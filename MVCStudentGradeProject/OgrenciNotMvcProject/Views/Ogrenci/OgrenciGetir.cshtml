@model OgrenciNotMvcProject.Models.EntityFramework.TblOgrenciler
@{
    ViewBag.Title = "OgrenciGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Ogrenci", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.OgrAd)
        <br />
        @Html.TextBoxFor(m => m.OgrAd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OgrSoyad)
        <br />
        @Html.TextBoxFor(m => m.OgrSoyad, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OgrFoto)
        <br />
        @Html.TextBoxFor(m => m.OgrFoto, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OgrKulüp)
        <br />
        @*@Html.TextBoxFor(m => m.OgrKulüp, new { @class = "form-control" })*@
        @Html.DropDownListFor(m => m.TblKulüpler.KulüpId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OgrCinsiyet)
        <br />
        @Html.TextBoxFor(m => m.OgrCinsiyet, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.OgrId)
    <div>
        <button class="btn btn-info">
            Güncelle
        </button>
    </div>
}

