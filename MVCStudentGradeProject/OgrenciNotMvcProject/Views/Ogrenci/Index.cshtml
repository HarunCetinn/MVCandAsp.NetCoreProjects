@using OgrenciNotMvcProject.Models.EntityFramework
@model List<TblOgrenciler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Öğrenci Id</th>
        <th>Öğrenci Adı</th>
        <th>Öğrenci Soyadı</th>
        <th>Öğrenci Cinsiyeti</th>
        <th>Öğrenci Kulüp</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OgrId</td>
                <td>@ogr.OgrAd</td>
                <td>@ogr.OgrSoyad</td>
                <td>@ogr.OgrCinsiyet</td>
                <td>@ogr.TblKulüpler.KulüpAd</td>
                <td><a href="/Ogrenci/Sil/@ogr.OgrId" class="btn btn-danger">Sil</a> <a href="/Ogrenci/OgrenciGetir/@ogr.OgrId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>

</table>
<a href="/Ogrenci/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>
